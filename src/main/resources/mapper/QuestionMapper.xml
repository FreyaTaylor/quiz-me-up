<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.quizmeup.mapper.QuestionMapper">

    <!-- 根据知识点ID查询题目列表 -->
    <select id="selectByKnowledgeId" resultType="com.example.quizmeup.entity.Question">
        SELECT id,
               knowledge_id,
               question_text,
               model_answer,
               importance,
               difficulty,
               created_at,
               updated_at
        FROM lc_questions
        WHERE knowledge_id = #{knowledgeId}
        ORDER BY created_at DESC
    </select>

</mapper>
